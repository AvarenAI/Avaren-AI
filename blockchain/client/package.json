{ 
  "name": "Nivaro-ai-client",
  "version": "1.0.0",
  "description": "Client-side application for Ontora AI on Solana network",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "lint": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "clean": "rm -rf dist",
    "build:watch": "tsc --watch",
    "test:watch": "jest --watch",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@solana/web3.js": "^1.78.5",
    "@project-serum/anchor": "^0.26.0",
    "@solana/spl-token": "^0.3.8",
    "buffer": "^6.0.3",
    "bn.js": "^5.2.1",
    "borsh": "^0.7.0",
    "bs58": "^5.0.0",
    "dotenv": "^16.3.1",
    "axios": "^1.5.0",
    "express": "^4.18.2",
    "winston": "^3.10.0",
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.2",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "solana",
    "web3",
    "blockchain",
    "smart-contract",
    "ontora-ai",
    "decentralized"
  ],
  "author": "Ontora AI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/ontora-ai-client.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/ontora-ai-client/issues"
  },
  "homepage": "https://github.com/yourusername/ontora-ai-client#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "private": false
}
